{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            	<div class="page-header">
            	  <h1>Receta <small>AÃ±adir nueva receta</small></h1>
            	</div>
            </div>
        </div>
        <div class="row well">
            <div class="col-md-12">
                {{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}

                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Nombre de la receta'} }) }}
                    <span class="text-danger">{{ form_errors(form.name) }}</span>
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder' : 'Your first name'}}) }}
                    <span class="text-danger">{{ form_errors(form.description) }}</span>
                </div>

                <div class="form-group">
                    {{ form_label(form.difficulty) }}
                    {{ form_widget(form.difficulty, {'attr': {'class': 'form-control', 'placeholder' : 'Your last name'}}) }}
                    <span class="text-danger">{{ form_errors(form.difficulty) }}</span>
                </div>

                <div class="form-group">
                    {{ form_label(form.portion) }}
                    {{ form_widget(form.portion, {'attr': {'class': 'form-control', 'placeholder' : 'Your email'}}) }}
                    <span class="text-danger">{{ form_errors(form.portion) }}</span>
                </div>

                <div class="form-group">
                    {{ form_label(form.rate) }}
                    {{ form_widget(form.rate, {'attr': {'class': 'form-control', 'placeholder' : 'Your password'}}) }}
                    <span class="text-danger">{{ form_errors(form.rate) }}</span>
                </div>

                <div class="form-group">
                    {{ form_label(form.duration) }}
                    {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.duration) }}</span>
                </div>

                <p>
                    {{ form_widget(form.save, {'label' : 'Create user', 'attr': {'class': 'btn btn-success'}}) }}
                </p>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}