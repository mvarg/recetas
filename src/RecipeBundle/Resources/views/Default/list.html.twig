{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="page-header">
                    <h1>Recetas<br>
                        <small>Secci√≥n de recetas</small>
                        <a href="{{ path('recipe_add') }}" class="btn btn-sm btn-success pull-right">{{ "Add recipe" | trans }}</a>
                    </h1>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ "Name" | trans }}</th>
                            <th>{{ "Description" | trans }}</th>
                            <th>{{ "Difficulty" | trans }}</th>
                            <th>{{ "Rate" | trans }}</th>
                            <th>{{ "Time" | trans }}</th>
                            <th>{{ "Author" | trans }}</th>
                            <th>{{ "Actions" | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for recipe in recipes  %}
                            <tr>
                                <td>{{ recipe.name }}</td>
                                <td>{{ recipe.description }}</td>
                                <td>{{ recipe.difficulty }}</td>
                                <td>{{ recipe.rate }}</td>
                                <td>{{ recipe.duration }}</td>
                                <td>{{ recipe.user.username }}</td>
                                <td>
                                    <a href="{# path('recipe_get') #}" class="btn btn-sm btn-info">{{ "View" | trans }}</a>
                                    <a href="{# path('recipe_mod') #}" class="btn btn-sm btn-primary">{{ "Edit" | trans }}</a>
                                    <a href="{# path('recipe_del') #}" class="btn btn-sm btn-danger">{{ 'Delete' |trans }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}