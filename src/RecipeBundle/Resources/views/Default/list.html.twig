{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="page-header">
                    <h1>Recetas<br>
                        <small>Sección de recetas</small>
                        <a href="{{ path('recipe_add') }}" class="btn btn-sm btn-success pull-right">Añadir receta</a>
                    </h1>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Dificultad</th>
                            <th>Valoración</th>
                            <th>Duración</th>
                            <th>Autor</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for recipe in recipes  %}
                            <tr>
                                <td>{{ recipe.name }}</td>
                                <td>{{ recipe.description }}</td>
                                <td>{{ recipe.difficulty }}</td>
                                <td>{{ recipe.rate }}</td>
                                <td>{{ recipe.duration }}</td>
                                <td>{{ recipe.user.username }}</td>
                                <td>
                                    <a href="{# path('recipe_get') #}" class="btn btn-sm btn-info">Ver</a>
                                    <a href="{# path('recipe_mod') #}" class="btn btn-sm btn-primary">Editar</a>
                                    <a href="{# path('recipe_del') #}" class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}